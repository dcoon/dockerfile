[Unit]
Description=Netatalk (Time Machine) Service
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
ExecStartPre=/usr/bin/docker kill netatalk
ExecStartPre=/usr/bin/docker rm netatalk
ExecStart=/usr/bin/docker run -d -p 548:548 -p 5353:5353 --name netatalk --volumes-from netatalk-data dcoon/netatalk
ExecStop=/usr/bin/docker stop netatalk
Restart=on-failure

[Install]
WantedBy=multi-user.target
