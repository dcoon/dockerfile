# node.js
#
# VERSION               0.0.1

FROM      ubuntu
MAINTAINER David Coon "dcoon@davidcoon.org"

# make sure the package repository is up to date
RUN apt-get update && apt-get clean
RUN apt-get install -y wget nano git screen curl 
# add dcoon user
RUN useradd -m -s /bin/bash dcoon && adduser dcoon sudo
# setup nano
ADD https://nanosyntax.googlecode.com/svn/trunk/syntax-nanorc/js.nanorc /usr/share/nano/js.nanorc
ADD https://github.com/dcoon/dockerfile/raw/master/.nanorc /home/dcoon/
